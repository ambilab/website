---
export interface Props {
    title?: string;
    class?: string;
}

const { title, class: className = '' } = Astro.props;
---

<div
    class={`rounded-lg border border-border-default bg-surface p-6 shadow-sm transition-shadow hover:shadow-md dark:border-border-default-dark dark:bg-surface-dark ${className}`}
>
    {title && <h3 class="mb-4 text-xl font-semibold">{title}</h3>}
    <div>
        <slot />
    </div>
</div>
