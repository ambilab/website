---
export interface Props {
    title?: string;
    class?: string;
}

const { title, class: className = '' } = Astro.props as Props;
---

<div
    class:list={[
        'card-with-shadows -mx-[16px] bg-card-bg px-4 pb-2 pt-4 text-card-text',
        'sm:px-[16px] sm:pb-[2px] sm:pt-[16px]',
        className,
    ]}
>
    {title && <h3 class="mt-px! md:mt-[2px]! mb-2!">{title}</h3>}

    <div class="text-balance">
        <slot />
    </div>
</div>
