---
import PageLayout from '@components/astro/PageLayout.astro';
import Button from '@components/svelte/Button.svelte';
import { SITE } from '@config/site';
import type { Locale } from '@type/locale';

interface Props {
    code: number;
    title: string;
    description: string;
    homeButtonText: string;
    homeLink?: string;
    locale: Locale;
    requestId?: string;
}

const { code, title, description, homeButtonText, homeLink = '/', locale, requestId } = Astro.props as Props;
---

<PageLayout
    title={`${code} - ${title} | ${SITE.NAME}`}
    description={description}
    permalink={`${Astro.url.origin}/${code}`}
    locale={locale}
>
    <div
        class="container mx-auto flex select-none flex-col items-start justify-start px-4 py-[27px] sm:py-[22px] md:max-w-screen-md md:py-[33px] lg:max-w-[928px]"
    >
        <h1
            class="md:leading-18 -ml-[1.5px] mb-[5px] block w-full text-[36px] leading-9 sm:text-[40px] sm:leading-10 md:-ml-1 md:mb-[9px] md:text-[73px] md:font-light md:tracking-tight"
        >
            {code}.
            <span class="block text-balance">{description}</span>
        </h1>

        {
            requestId && (
                <p class="mt-4 font-mono text-sm text-text-muted" id="request-id">
                    {requestId}
                </p>
            )
        }
        <Button client:load href={homeLink}>{homeButtonText}</Button>
    </div>
</PageLayout>
